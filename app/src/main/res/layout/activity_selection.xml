<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_major"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/dph"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/dp_icon"
            android:layout_width="80dp"
            android:layout_height="75dp"></ImageButton>
        
        <TextView
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/coin"
            android:background="@drawable/hint_icon"
            android:gravity="center"
            android:id="@+id/hint"
            android:layout_width="85dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/coins_icon"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:id="@+id/coin"
            android:layout_width="85dp"
            android:layout_height="30dp"/>
        <Button
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/dph"
            android:id="@+id/setting"
            android:background="@drawable/seeting_icon"
            android:layout_width="35dp"
            android:layout_height="30dp">
        </Button>
        <Button
            android:layout_marginStart="15dp"
            android:layout_below="@+id/setting"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:id="@+id/group"
        android:background="@drawable/group_icon"
        android:layout_width="45dp"
        android:layout_height="40dp">
    </Button>
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="373dp"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:background="@drawable/selection_icon">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="35dp"
            android:text="Select categories"
            android:textSize="22dp"></TextView>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <CheckBox
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Name"></CheckBox>

            <CheckBox
                android:id="@+id/Things"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Name"
                android:text="Things"></CheckBox>

            <CheckBox
                android:id="@+id/Songs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Things"
                android:text="Songs"></CheckBox>

            <CheckBox
                android:id="@+id/Place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="81dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/Name"
                android:text="Place"></CheckBox>

            <CheckBox
                android:id="@+id/Birds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Place"
                android:layout_marginLeft="75dp"
                android:layout_toRightOf="@+id/Things"
                android:text="Birds"></CheckBox>

            <CheckBox
                android:id="@+id/Fruits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Birds"
                android:layout_marginLeft="79dp"
                android:layout_toRightOf="@+id/Songs"
                android:text="Fruits/Vegetables"></CheckBox>

            <CheckBox
                android:id="@+id/Movies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Songs"
                android:text="Movies"></CheckBox>

            <CheckBox
                android:id="@+id/Animals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Fruits"
                android:layout_marginLeft="74dp"
                android:layout_toRightOf="@+id/Movies"
                android:text="Animals/Insects"></CheckBox>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="219dp">

            <EditText
                android:id="@+id/editText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:hint="Enter Game ID"></EditText>

            <Button
                android:id="@+id/invite"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/editText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Invite friends"></Button>

            <Button
                android:id="@+id/Play"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/invite"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Play"></Button>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>