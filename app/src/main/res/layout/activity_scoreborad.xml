<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_major"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageButton
            android:layout_marginLeft="15dp"
            android:background="@drawable/dp_icon"
            android:layout_width="60dp"
            android:layout_height="50dp"></ImageButton>

        <TextView
            android:layout_marginTop="-5dp"
            android:background="@drawable/hint_icon"
            android:gravity="center"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/coin"
            android:id="@+id/hint"
            android:layout_width="85dp"
            android:layout_height="45dp" />

        <TextView
            android:background="@drawable/coins_icon"
            android:gravity="center"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/setting"
            android:id="@+id/coin"
            android:layout_width="85dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/setting"
            android:layout_alignParentEnd="true"
            android:background="@drawable/seeting_icon"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true">
        </Button>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/selection_icon"
        android:layout_width="wrap_content"
        android:layout_height="440dp">
        <TableLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Open..."
                    android:padding="3dip" />
                <TextView
                    android:text="Ctrl-O"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Save..."
                    android:padding="3dip" />
                <TextView
                    android:text="Ctrl-S"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Save As..."
                    android:padding="3dip" />
                <TextView
                    android:text="Ctrl-Shift-S"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>
                <TextView
                    android:text="X"
                    android:padding="3dip" />
                <TextView
                    android:text="Import..."
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="X"
                    android:padding="3dip" />
                <TextView
                    android:text="Export..."
                    android:padding="3dip" />
                <TextView
                    android:text="Ctrl-E"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Quit"
                    android:padding="3dip" />
            </TableRow>
        </TableLayout>
           </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/group_icon"
            android:id="@+id/fbtn1"
            android:layout_width="80dp"
            android:layout_height="50dp"></Button>
        <Button
            android:background="@drawable/menu_icon"
            android:layout_toRightOf="@+id/fbtn1"
            android:id="@+id/fbtn2"
            android:layout_width="60dp"
            android:layout_height="50dp"></Button>
        <Button
            android:background="@drawable/cart_icon"
            android:layout_toRightOf="@+id/fbtn2"
            android:id="@+id/fbtn3"
            android:layout_width="80dp"
            android:layout_height="50dp"></Button>
        <Button
            android:background="@drawable/seeting_icon"
            android:layout_toRightOf="@+id/fbtn3"
            android:id="@+id/fbtn4"
            android:layout_width="80dp"
            android:layout_height="50dp"></Button>
    </RelativeLayout>
</LinearLayout>