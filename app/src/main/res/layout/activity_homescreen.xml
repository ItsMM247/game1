<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_major"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageButton
            android:id="@+id/dp"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/dp_icon"></ImageButton>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dp"
                android:id="@+id/show_id"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
        <TextView
            android:layout_marginTop="-5dp"
            android:background="@drawable/hint_icon"
            android:gravity="center"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/coin"
            android:id="@+id/hinthere"
            android:layout_width="85dp"
            android:layout_height="45dp" />

        <TextView
            android:background="@drawable/coins_icon"
            android:gravity="center"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/setting"
            android:id="@+id/coin"
            android:layout_width="85dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/setting"
            android:layout_alignParentEnd="true"
            android:background="@drawable/seeting_icon"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true">
        </Button>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/icon_major"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="250dp">
        <TextView
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/name"
            android:textSize="@android:dimen/app_icon_size"
            android:text="Name"
            android:layout_width="200dp"
            android:layout_height="60dp"></TextView>
        <TextView
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/name"
            android:id="@+id/place"
            android:textSize="@android:dimen/app_icon_size"
            android:text="Place"
            android:layout_width="200dp"
            android:layout_height="60dp"></TextView>
        <TextView
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/place"
            android:id="@+id/thing"
            android:textSize="@android:dimen/app_icon_size"
            android:text="Thing"
            android:layout_width="200dp"
            android:layout_height="60dp"></TextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.gms.common.SignInButton
            android:id="@+id/signInButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.329" />
        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button_fb"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="100dp"
        android:id="@+id/next_pass"
        android:background="@drawable/right_arrow"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/group_icon"
            android:id="@+id/fbtn1"
            android:layout_width="80dp"
            android:layout_height="50dp"></Button>
        <Button
            android:background="@drawable/menu_icon"
            android:layout_toRightOf="@+id/fbtn1"
            android:id="@+id/fbtn2"
            android:layout_width="60dp"
            android:layout_height="50dp"></Button>
        <Button
            android:background="@drawable/cart_icon"
            android:layout_toRightOf="@+id/fbtn2"
            android:id="@+id/fbtn3"
            android:layout_width="80dp"
            android:layout_height="50dp"></Button>
        <Button
            android:background="@drawable/seeting_icon"
            android:layout_toRightOf="@+id/fbtn3"
            android:id="@+id/fbtn4"
            android:layout_width="80dp"
            android:layout_height="50dp"></Button>
    </RelativeLayout>
</LinearLayout>